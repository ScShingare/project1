<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #tri
        {
            background-color:rgb(63, 148, 88);
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="/ajaxtest.js"></script>
    
</head>
<body>
    <%- include('nav.ejs')%>
    <div class="container">
        <div  class="form-group ml-5 mr-5">
            <input type="search" class="form-control" id="nid" placeholder="search" style="height:40px;width:100%" onkeyup="ajaxImpl(this.value)">
            </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>SRNO</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>CONTACT</th>
                <th>DELETE</th>
                <th>UPDATE</th>
            </tr>
            </thead>
            <tbody id="tblBody">
               
                <%
                if(data.length==0){
                    %>
                    <tr id="tri"><td colspan="6"><h3>there is no data in database</h3></td> </tr>
                    <%
                }
                else
                {
                data.forEach((item,index)=>{
                %>

                <tr>
                    <td><%=(index+1)%></td>
                    <td><%=item.name%></td>
                    <td><%=item.email%></td>
                    <td><%=item.contact%></td>
                    <td><a href="/deleteempbyid?eid=<%=item.empid%>">delete</a></td>
                    <td><a href="">update</a></td>

                <%
                })
            }
                %>

            </tbody>
            </table>
        </div>
</body>
</html>